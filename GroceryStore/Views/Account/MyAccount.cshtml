@model GroceryStore.ViewModels.tblAddressViewModel
<div class="u-s-p-b-60">
    <div class="section__content">
        <div class="dash">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-12">
                        @Html.Partial("MyAccountSideMenu.cshtml", Model.UserDetails)
                    </div>
                    <div class="col-lg-9 col-md-12">
                        <div class="dash__box dash__box--shadow dash__box--radius dash__box--bg-white u-s-m-b-30">
                            <div class="dash__pad-2">
                                <h1 class="dash__h1 u-s-m-b-14">Manage My Account</h1>

                                <span class="dash__text u-s-m-b-30">From your My Account Dashboard you have the ability to view a snapshot of your recent account activity and update your account information. Select a link below to view or edit information.</span>
                                <div class="row">
                                    <div class="col-lg-6 u-s-m-b-30">
                                        <div class="dash__box dash__box--bg-grey dash__box--shadow-2 u-h-100">
                                            <div class="dash__pad-3">
                                                <h2 class="dash__h2 u-s-m-b-8">PERSONAL PROFILE</h2>
                                                <span class="dash__text">@(Model.UserDetails.FirstName + " " + Model.UserDetails.LastName)</span>
                                                <span class="dash__text">@Model.UserDetails.Email</span>
                                                <div class="dash__link dash__link--secondary u-s-m-b-8">
                                                    <a href="@Url.Action("EditMyProfile","Account")">Edit</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 u-s-m-b-30">
                                        <div class="dash__box dash__box--bg-grey dash__box--shadow-2 u-h-100">
                                            <div class="dash__pad-3">
                                                <h2 class="dash__h2 u-s-m-b-8">ADDRESS BOOK</h2>
                                                <span class="dash__text-2 u-s-m-b-8">Default Shipping Address</span>
                                                @if (Model.IsDefault)
                                                {
                                    <span class="dash__text">@(Model.Address+", "+Model.City + ", "+Model.State+" ,")</span>
                                                    <span class="dash__text">@(Model.Country+"-"+Model.PinCode)</span>}
                                                <div class="dash__link dash__link--secondary u-s-m-b-8">
                                                    <a href="@Url.Action("AddressBook","Account")">Edit</a>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>