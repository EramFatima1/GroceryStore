@model GroceryStore.ViewModels.tblAddressViewModel
<div class="u-s-p-b-60">
    <div class="section__content">
        <div class="dash">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-12">
                        @Html.Partial("MyAccountSideMenu.cshtml", Model.UserDetails)
                    </div>
                    <div class="col-lg-9 col-md-12">
                        <div class="dash__box dash__box--shadow dash__box--radius dash__box--bg-white u-s-m-b-30">
                            <div class="dash__pad-2">
                                <h1 class="dash__h1 u-s-m-b-14">My Profile</h1>

                                <span class="dash__text u-s-m-b-30">Look all your info, you could customize your profile.</span>
                                <div class="row">
                                    <div class="col-lg-4 u-s-m-b-30">
                                        <h2 class="dash__h2 u-s-m-b-8">Full Name</h2>
                                        <span class="dash__text">@(Model.UserDetails.FirstName + " " + Model.UserDetails.LastName)</span>
                                    </div>
                                    <div class="col-lg-4 u-s-m-b-30">
                                        <h2 class="dash__h2 u-s-m-b-8">E-mail</h2>
                                        <span class="dash__text">@Model.UserDetails.Email</span>
                                    </div>
                                    <div class="col-lg-4 u-s-m-b-30">
                                        <h2 class="dash__h2 u-s-m-b-8">Phone</h2>
                                       @if(Model.UserDetails.Phone!=null ||Model.UserDetails.Phone!="")
                                        {
                                        <span class="dash__text">@Model.UserDetails.Phone</span>
                                        }
                                        else
                                        {
                                        <div class="dash__link dash__link--secondary">
                                            <a href="@Url.Action("EditMyProfile","Account")">Add</a>
                                        </div>
                                        }
                                    </div>
                                    <div class="col-lg-4 u-s-m-b-30">
                                        <h2 class="dash__h2 u-s-m-b-8">Gender</h2>
                                        <span class="dash__text">@Model.UserDetails.Gender</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="u-s-m-b-16">
                                            <a class="dash__custom-link btn--e-transparent-brand-b-2" href="@Url.Action("EditMyProfile","Account")">Edit Profile</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>