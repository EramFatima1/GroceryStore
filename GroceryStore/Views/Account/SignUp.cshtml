@model tblUsers
<div class="u-s-p-b-60">
    <div class="section__intro u-s-m-b-60">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section__text-wrap">
                        <h1 class="section__heading u-c-secondary">CREATE AN ACCOUNT</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="section__content">
        <div class="container">
            <div class="row row--center">
                <div class="col-lg-6 col-md-8 u-s-m-b-30">
                    <div class="l-f-o">
                        <div class="l-f-o__pad-box">
                            <h1 class="gl-h1">PERSONAL INFORMATION</h1>
                            <form asp-action="SignUp" method="post" class="l-f-o__form">
                                <div class="u-s-m-b-30">
                                    <label class="gl-label" asp-for="FirstName">FIRST NAME <span style="color:red">*</span></label>
                                    <input type="text" class="input-text input-text--primary-style" asp-for="FirstName" placeholder="First Name">
                                    <span asp-validation-for="FirstName" style="color:red"></span>
                                </div>
                                <div class="u-s-m-b-30">
                                    <label class="gl-label" asp-for="LastName">LAST NAME <span style="color:red">*</span></label>
                                    <input class="input-text input-text--primary-style" type="text" asp-for="LastName" placeholder="Last Name">
                                    <span asp-validation-for="LastName" style="color:red"></span>
                                </div>
                                <div class="gl-inline">
                                    <div class="u-s-m-b-30">
                                        <label class="gl-label" asp-for="Gender">GENDER</label>
                                        <select class="select-box select-box--primary-style u-w-100" asp-for="Gender">
                                            <option value="" selected>Select</option>
                                            <option value="M">Male</option>
                                            <option value="F">Female</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="u-s-m-b-30">
                                    <label class="gl-label" asp-for="Email">E-MAIL <span style="color:red">*</span></label>
                                    <input class="input-text input-text--primary-style" type="text" asp-for="Email" placeholder="Enter E-mail">
                                    <span asp-validation-for="Email" style="color:red"></span>
                                </div>
                                <div class="u-s-m-b-30">
                                    <label class="gl-label" asp-for="Email">PHONE <span style="color:red">*</span></label>
                                    <input class="input-text input-text--primary-style" type="text" asp-for="Phone" placeholder="Enter Phone">
                                    <span asp-validation-for="Phone" style="color:red"></span>
                                </div>
                                <div class="u-s-m-b-30">
                                    <label class="gl-label" asp-for="Password">PASSWORD <span style="color:red">*</span></label>
                                    <input class="input-text input-text--primary-style" type="password" asp-for="Password" placeholder="Enter Password">
                                    <span asp-validation-for="Password" style="color:red"></span>
                                </div>
                                <div class="u-s-m-b-15">
                                    <button class="btn btn--e-transparent-brand-b-2" type="submit" onclick="return validateData();">CREATE</button>
                                </div>
                                <a class="gl-link" href="@Url.Action("Index","Home")">Return to Store</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function validateData()
    {
        debugger;
        if ($("#FirstName").val() == "")
        {
            swal("Please enter OrderCode !");
            return false;
        } else if ($("#LastName").val() == "")
        {
            swal("Please enter OrderPrice !");
            return false;
        } else
        {
            return true;
        }
    }
</script> 